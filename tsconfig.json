{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowJs": true
	},
	"include": ["*.ts", "*.mjs", "__test__/**/*.ts", "scripts/**/*.mjs", "scripts/**/*.mts"],
	"exclude": ["node_modules"]
}
