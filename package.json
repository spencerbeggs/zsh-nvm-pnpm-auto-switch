{
	"name": "zsh-nvm-pnpm-auto-switch",
	"version": "0.0.0",
	"private": true,
	"description": "A zsh plugin that automatically switches Node.js versions using nvm and manages pnpm package manager versions using Corepack when changing directories",
	"repository": {
		"type": "git",
		"url": "https://github.com/spencerbeggs/zsh-nvm-pnpm-auto-switch.git"
	},
	"author": {
		"name": "C. Spencer Beggs",
		"email": "spencer@savvy.nyc"
	},
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"lint:inspect": "pnpm dlx @eslint/config-inspector",
		"prepare": "husky",
		"release": "pnpm semantic-release",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "feat",
							"release": "minor"
						},
						{
							"type": "fix",
							"release": "patch"
						},
						{
							"type": "ci",
							"release": "patch"
						},
						{
							"type": "chore",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"@semantic-release/changelog",
				{
					"changelogFile": "CHANGELOG.md"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						"CHANGELOG.md"
					]
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"CHANGELOG.md",
						"package.json",
						"pnpm-lock.yaml"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			]
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@eslint/config-inspector": "^1.0.2",
		"@eslint/js": "^9.25.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.2",
		"@types/node": "^22.14.1",
		"@typescript-eslint/utils": "^8.31.0",
		"comment-json": "^4.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-import-resolver-typescript": "^4.3.4",
		"eslint-plugin-import-x": "^4.10.6",
		"eslint-plugin-package-json": "^0.31.0",
		"eslint-plugin-prettier": "^5.2.6",
		"glob": "^11.0.2",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.4.2",
		"prettier": "^3.5.3",
		"prettier-plugin-packagejson": "^2.5.10",
		"semantic-release": "^24.2.3",
		"shellcheck": "^3.1.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.0",
		"vitest": "^3.1.2"
	},
	"packageManager": "pnpm@10.10.0"
}
